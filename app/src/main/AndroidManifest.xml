<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.safegass">

    <!-- ✅ Permissions must be declared OUTSIDE <application> -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- For Android 12 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-feature android:name="android.hardware.usb.host" android:required="false" />
    <uses-permission android:name="android.permission.USB_PERMISSION" tools:node="remove" />
    <!-- runtime doesn't need an explicit permission constant, USB uses PendingIntent -->


    <!-- For Android 13+ (READ_MEDIA_IMAGES) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeGass"
        tools:targetApi="31">

        <!-- ✅ Login Activity (Launcher) -->
        <activity
            android:name=".login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SafeGass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Register Activity -->
        <activity
            android:name=".register.RegisterActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.SafeGass" />

        <!-- ✅ Forgot Password Activity -->
        <activity
            android:name=".forgotpassword.ForgotPasswordActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.SafeGass" />

        <!-- ✅ Landing Activity (After Login) -->
        <activity
            android:name=".landing.LandingActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.SafeGass" />

        <!-- ✅ Dashboard Activity -->
        <activity
            android:name=".dashboard.DashboardActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Alert Activity -->
        <activity
            android:name=".alert.AlertActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!-- ✅ History Activity -->
        <activity
            android:name=".history.HistoryActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Settings Activity -->
        <activity
            android:name=".settings.SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Connected Devices -->
        <activity
            android:name=".connected.ConnectedDevicesActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Profile Page -->
        <activity
            android:name=".profile.ProfilePageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Edit Profile -->
        <activity
            android:name=".edit.EditProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ Update Password -->
        <activity
            android:name=".update.UpdatePasswordActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ✅ View Page -->
        <activity
            android:name=".view.ViewPageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>
</manifest>
