<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for selected tab -->
    <solid android:color="#00796B" />  <!-- teal green (change color if you want) -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional shadow or border -->
    <stroke
        android:width="1dp"
        android:color="#004D40" />

    <!-- Padding inside the tab -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
