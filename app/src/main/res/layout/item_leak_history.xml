<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <!-- Icon -->
    <ImageView
        android:id="@+id/imgLeakIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/leak_icon_desc"
        android:src="@drawable/ic_gas_logo" />

    <!-- Text Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLeakTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="62 ppm - Kitchen"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtLeakStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danger, Auto Alarm"
            android:textSize="12sp"
            android:textColor="#777777" />
    </LinearLayout>
</LinearLayout>
