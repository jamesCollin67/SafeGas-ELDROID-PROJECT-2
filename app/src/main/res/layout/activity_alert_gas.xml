<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".alert.AlertActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SafeGas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Emergency Alert Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card"
        android:padding="12dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gas" />

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Alert"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/alertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danger! Gas Leak Detected. Take Action Now!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/alertSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitchen Sensor"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/alertTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 min ago"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnMuteAlarm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Mute Alarm"
                android:textSize="12sp"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="12sp"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCallEmergency"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Call Emergency"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00C853"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Recent Alerts -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Alerts"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/tabAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="All"
            android:textColor="#000000"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tabDanger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Danger"
            android:textColor="#000000"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tabWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Warning"
            android:textColor="#000000"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tabInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Info"
            android:textColor="#000000"
            android:padding="8dp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAlerts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <!-- Bottom Navigation -->
    <include layout="@layout/include_buttom_nav" />

</LinearLayout>
