<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".dashboard.DashboardActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:gravity="center_horizontal">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="menu" />

                <TextView
                    android:id="@+id/textAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="SafeGas"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </RelativeLayout>

            <!-- Image + upload -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imageHouseGas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gas"
                    android:scaleType="centerCrop"
                    android:contentDescription="house illustration" />

                <!-- Plus upload button -->
                <ImageButton
                    android:id="@+id/buttonUploadImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_circle_gray"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Upload Image"
                    android:padding="8dp" />
            </FrameLayout>

            <!-- Location input -->
            <EditText
                android:id="@+id/editLocationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter location name (e.g. Kitchen Sensor)"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background_gray"
                android:textColor="#000000"
                android:textSize="13sp" />

            <!-- Save Location centered -->
            <Button
                android:id="@+id/buttonSaveLocation"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Save Location"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@drawable/button_background_green"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- PPM + status block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ppm"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safe"
                        android:textSize="13sp"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:id="@+id/textLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please Save a location"
                        android:textSize="12sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="View Details"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:background="@drawable/button_background_green" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/buttonCallEmergency"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="44dp"
                    android:text="Call Emergency"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_background_green"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/buttonMuteAlarm"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="44dp"
                    android:text="Mute Alarm"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@drawable/button_background_gray" />
            </LinearLayout>

            <!-- Last updated -->
            <TextView
                android:id="@+id/textLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated 10:30 AM"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="#7A7A7A"
                android:layout_marginBottom="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Indicator Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#4CAF50" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFEB3B" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F44336" />
                </LinearLayout>
            </LinearLayout>

            <!-- Status Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safe"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0–500 ppm"
                        android:textSize="12sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warning"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#FBC02D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="501–1000 ppm"
                        android:textSize="12sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danger"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#D32F2F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1001+ ppm"
                        android:textSize="12sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Overview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Active Alerts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Alerts"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textActiveAlerts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Online Devices -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Devices"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textOnlineDevices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Today's Average -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Average"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textAveragePPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ppm"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Peak Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peak Today"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textPeakPPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ppm"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav -->
    <include layout="@layout/include_buttom_nav" />

</LinearLayout>
