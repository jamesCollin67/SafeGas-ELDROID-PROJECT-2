<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- SafeGas logo (top-left) -->
            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gas_logo"
                android:contentDescription="SafeGas logo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp" />

            <!-- App name centered -->
            <TextView
                android:id="@+id/textAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SafeGas"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <!-- Welcome text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal" />

        <!-- Sub text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to monitor your home's gas safety"
            android:textColor="#7A7A7A"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal" />

        <!-- Email -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_background"
            android:hint="Email"
            android:paddingStart="16dp"
            android:textColorHint="#A8A8A8"
            android:inputType="textEmailAddress" />

        <!-- Password with toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Password"
                android:paddingStart="16dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textColorHint="#A8A8A8" />

            <ImageView
                android:id="@+id/imageViewTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Toggle password visibility" />
        </LinearLayout>

        <!-- Remember Me + Forgot Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkBoxRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="#000000"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#7A7A7A"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Sign In button -->
        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Sign In"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background_green" />

        <!-- Google Sign In button -->
        <Button
            android:id="@+id/buttonGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Continue with Google"
            android:textColor="#000000"
            android:background="@drawable/button_background_gray" />
        <Button
            android:id="@+id/btnResendVerification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Resend Verification Email"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background_gray"
            android:textColor="#000000" />


        <!-- Spacer pushes bottom text down -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom text -->
        <TextView
            android:id="@+id/textCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account? Create one"
            android:textColor="#7A7A7A"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
