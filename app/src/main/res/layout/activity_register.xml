<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Logo on left -->
            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_gas_logo"
                android:layout_alignParentStart="true"
                android:contentDescription="SafeGas logo" />

            <!-- App name centered -->
            <TextView
                android:id="@+id/textAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SafeGas"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor gas safety across your home"
            android:textColor="#7A7A7A"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_background"
            android:hint="Full Name"
            android:paddingStart="16dp"
            android:textColorHint="#A8A8A8"
            android:inputType="textPersonName" />

        <!-- Email -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:hint="Email"
            android:paddingStart="16dp"
            android:textColorHint="#A8A8A8"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Password"
                android:paddingStart="16dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textColorHint="#A8A8A8" />

            <ImageView
                android:id="@+id/imageViewTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Toggle password visibility" />
        </LinearLayout>

        <!-- Confirm Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Confirm Password"
                android:paddingStart="16dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textColorHint="#A8A8A8" />

            <ImageView
                android:id="@+id/imageViewToggleConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Toggle confirm password visibility" />
        </LinearLayout>

        <!-- Home Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Home Location (Optional)"
                android:paddingStart="16dp"
                android:background="@android:color/transparent"
                android:textColorHint="#A8A8A8" />

            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Location icon" />
        </LinearLayout>

        <!-- Terms and Privacy -->
        <CheckBox
            android:id="@+id/checkBoxTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms  Privacy Policy"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginTop="16dp" />

        <!-- Create Account Button -->
        <Button
            android:id="@+id/buttonCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Create Account"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background_green" />

        <!-- Google Sign-In Button -->
        <Button
            android:id="@+id/buttonGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Continue with Google"
            android:textColor="#000000"
            android:background="@drawable/button_background_gray" />

        <!-- Bottom text -->
        <TextView
            android:id="@+id/textAlreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign in"
            android:textColor="#7A7A7A"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
