<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Top bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/backIcons"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SafeGas"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />
    </RelativeLayout>

    <!-- Forgot Password Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Instruction -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the email address associated with your account and we'll send you a link to reset your password."
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/inputEmails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email Address"
        android:background="@drawable/button_background_gray"
        android:padding="12dp"
        android:textSize="14sp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="18dp" />

    <!-- Send Reset Link Button -->
    <Button
        android:id="@+id/buttonSendResets"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Send Reset Link"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background_green"
        android:layout_marginBottom="14dp" />

    <!-- Back to Login -->
    <TextView
        android:id="@+id/textBackToLogins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textSize="13sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
