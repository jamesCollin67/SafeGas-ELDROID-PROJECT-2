<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".settings.SettingsActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SafeGas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">



            <!-- Emergency Automation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Automation"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-Send SMS"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-Call Emergency Contacts"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Home Integration"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />

            <!-- Language -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Language"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:textSize="14sp" />

            <!-- Cloud Sync -->

            <Button
                android:id="@+id/btnApplyLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F5F5F5"
                android:text="Apply"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloud Sync"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textLastSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last synced: 2 hours ago"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnManualSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Sync"
                android:backgroundTint="#F5F5F5"
                android:textColor="#000000" />

            <!-- Help & Support -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help  Support"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />

            <!-- Connected Devices -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Contact Support"
                android:textColor="#333333"
                android:textSize="14sp" />

            <!-- Connected Devices -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connected Devices"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textConnectedDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading devices..."
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/btnConnectedDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_chevron_right"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />


            <!-- Profile -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading name..."
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/textUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading email..."
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textColor="#333333" />


            <Button
                android:id="@+id/btnUpdatesPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Password"
                android:backgroundTint="#F5F5F5"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW PROFILE"
                android:backgroundTint="#F5F5F5"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />


            <!-- ðŸ”¹ LOG OUT BUTTON -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:backgroundTint="#E53935"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include layout="@layout/include_buttom_nav" />
</LinearLayout>
