<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connected.ConnectedDevicesActivity">

    <!-- Top App Bar -->
    <!-- Top App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Menu"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SafeGas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp">

            <!-- Connected Devices Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected Devices"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Example Device Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F7F7F7"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clipToOutline="true"
                android:backgroundTint="#F7F7F7"
                android:layout_marginTop="4dp"
                android:elevation="1dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_gas_logo"
                    android:contentDescription="Sensor icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen Sensor"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery 82%, Last seen 2 min ago"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rename | Location | Remove"
                        android:textSize="12sp"
                        android:textColor="#007AFF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Repeat similar cards dynamically using RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Add New Device Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Device"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnScanQR"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Scan QR Code"
                    android:textAllCaps="false"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnManualEntry"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Manual Entry"
                    android:textAllCaps="false"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Serial Number Field -->
            <EditText
                android:id="@+id/inputSerial"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:hint="Serial number"
                android:paddingHorizontal="12dp"
                android:inputType="text" />

            <!-- Location Field -->
            <EditText
                android:id="@+id/inputLocation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:hint="Location"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:inputType="text" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCancelAdd"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:backgroundTint="#EAEAEA" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnAddDevice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Add Device"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#32CD32" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Find the serial number under the QR label."
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
