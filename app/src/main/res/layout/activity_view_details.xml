<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="8dp"
    tools:context="view.ViewPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar: back icon + centered title + invisible placeholder to center title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/text_dark" />

            <!-- Invisible placeholder to keep title centered -->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- Sensor Status Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Status"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="18dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_dark" />

        <!-- Row: Status (two-line left) / Online (right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- Left two-line block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- Right single-line status -->
            <TextView
                android:id="@+id/tv_status_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Temperature Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_temperature_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.8Â°C"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_temperature_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Humidity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82%"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_humidity_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Gas Leak History Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Leak History"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="22dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_dark" />

        <!-- History item 1 -->
        <LinearLayout
            android:id="@+id/history_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-07-20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Methane"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Open" />
        </LinearLayout>

        <!-- History item 2 -->
        <LinearLayout
            android:id="@+id/history_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-07-15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Propane"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:15 PM"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Open" />
        </LinearLayout>

        <!-- History item 3 -->
        <LinearLayout
            android:id="@+id/history_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-07-10"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbon Monoxide"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:45 AM"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Open" />
        </LinearLayout>

        <!-- Sensor Health Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Health"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="22dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_dark" />

        <!-- Battery Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery Level"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_battery_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_battery_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Uptime -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uptime"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_uptime_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 days"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_uptime_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Last Calibration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Calibration"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_calibration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-05-15"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_calibration_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Connectivity Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connectivity"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="22dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_dark" />

        <!-- Wi-Fi Signal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wi-Fi Signal"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_wifi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-55 dBm"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_wifi_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Device ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="18dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device ID"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tv_deviceid_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A1B2C3D4E5F6"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_deviceid_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="@color/text_dark" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
